@{
    ViewBag.Title = "Customer Register";
}



<script src="~/Scripts/knockout-3.3.0.js"></script>
<script src="~/Scripts/knockout.validation.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/KnockoutModels/CustomerRegisterViewModel.js"></script>
<div class="page-header">
    <h2 class="text-center">Customer Registration</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">Register new customer</h2>
            </div>

            <div class="panel-body" data-bind="with: addCustomerViewModel">
                @Html.Partial("_RegisterCustomer")
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Registered Customers</h2>
            </div>
            <div class="panel-body" data-bind="with: customerListViewModel">
                @Html.Partial("_CustomerList")
            </div>
        </div>
    </div>
</div> 
