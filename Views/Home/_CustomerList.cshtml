<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>CustomerID</th>
            <th>Customer Name</th>
            <th>Contact NAme</th>
            <th>Address</th>
            <th>City</th>
            <th>Postal Code</th>
            <th>Country</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: customers">
        <tr>
            <td data-bind="text: CustomerID"></td>
            <td data-bind="text: ContactName"></td>
            <td data-bind="text: ContactName"></td>
            <td data-bind="text: Address"></td>
            <td data-bind="text: City"></td>
            <td data-bind="text: PostalCode"></td>
            <td data-bind="text: Country"></td>
            <td><input type="button" class="btn btn-danger btn-xs" value=" [x] delete " data-bind="click: $parent.removeCustomer" /></td>
        </tr>
    </tbody>
</table>

<br />

<input type="button" class="btn btn-default" id="btnGetCustomers" value="Refresh" data-bind="click: getCustomers" /> 
